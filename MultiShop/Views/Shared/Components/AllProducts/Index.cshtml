@model List<MultiShop.Models.Products>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    int i = 0;
    TempData["CustomProductCount"] = Model.Count;
}
@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
        <div class="product-item bg-light mb-4" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;border-radius:8px">
            <div class="product-img position-relative overflow-hidden" style="height:300px;border-radius:8px">
                <img class="img-fluid w-100" class="img-thumbnail" src="~/img/ProductsImages/@item.PrimaryImg" alt="Image">

                <div class="product-action">
                    <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-shopping-cart"></i></a>
                    <a class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                    <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                    <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-search"></i></a>
                </div>
            </div>
            <div class="text-center py-4">
                <a class="h6 text-decoration-none text-truncate" asp-area="ProductDetails" asp-controller="ProductDetails" asp-action="IndexId" asp-route-id="@item.ProductId">@item.ProductName</a>
                <div class="d-flex align-items-center justify-content-center mt-2">
                    <h5>$@item.ProductPrice</h5><h6 class="text-muted ml-2"><del></del></h6>

                </div>
                <div class="d-flex align-items-center justify-content-center mb-1">
                    <small class="fa fa-star text-primary mr-1"></small>
                    <small class="fa fa-star text-primary mr-1"></small>
                    <small class="fa fa-star text-primary mr-1"></small>
                    <small class="fa fa-star text-primary mr-1"></small>
                    <small class="fa fa-star text-primary mr-1"></small>
                    <small>(99)</small>
                </div>
            </div>
        </div>
    </div>


    i++;
}

